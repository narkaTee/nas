# vim: ft=yaml
groups:
  - name: custom rules
    rules:
      - alert: NodeSystemdFailedUnits
        annotations:
          message: '{% raw %}There are {{ $value }} failed systemd units on {{ $labels.instance }}.{% endraw %}'
          summary: 'Failed systemd units.'
        expr: "node_systemd_units{state='failed'} > 0\n"
        for: 5m
        labels:
          severity: warning
